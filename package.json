{
  "name": "my-vue-app",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "server": "node server.js",
    "dev:all": "concurrently \"npm run server\" \"npm run dev\" --kill-others-on-fail",
    "build": "vite build",
    "preview": "vite preview",
    "start": "NODE_ENV=production node server.js",
    "start:pm2": "pm2 start ecosystem.config.js --env production",
    "stop:pm2": "pm2 stop ecosystem.config.js",
    "restart:pm2": "pm2 restart ecosystem.config.js",
    "reload:pm2": "pm2 reload ecosystem.config.js",
    "logs:pm2": "pm2 logs my-vue-app-backend",
    "status:pm2": "pm2 status",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "clean": "rm -rf node_modules/.vite",
    "clean:ports": "chmod +x scripts/clean-ports.sh && ./scripts/clean-ports.sh",
    "start:fresh": "npm run clean:ports && npm run dev:all",
    "deploy": "npm run build && npm run start:pm2"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "axios": "^1.10.0",
    "body-parser": "^1.20.3",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "debug": "^4.4.1",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "finalhandler": "^2.1.0",
    "firebase": "^10.8.0",
    "fresh": "^0.5.2",
    "ms": "^2.1.3",
    "nodemailer": "^7.0.5",
    "pinia": "^3.0.3",
    "send": "^1.2.0",
    "statuses": "^2.0.2",
    "uuid": "^11.1.0",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0",
    "vue-toastification": "^2.0.0-rc.5"
  },
  "devDependencies": {
    "@testing-library/vue": "^8.0.2",
    "@vitejs/plugin-vue": "^5.0.4",
    "concurrently": "^8.2.2",
    "terser": "^5.43.1",
    "vite": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
